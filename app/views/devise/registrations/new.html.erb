<div class="general_navbar">
<%= render 'layouts/navbar' %>
</div>



<div id="login_container">
<h2>Sign up</h2>
<div class="form_container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :email,  :class => "label" %><br />
    <%= f.email_field :email, :class => "texty", autofocus: true, :placeholder => "Email Address" %>
  </div>

  <div class="field">
    <%= f.label :password,  :class => "label" %>
    <% if @validatable %>
    <em><% @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, :class => "texty", autocomplete: "off", :placeholder => "Password(8 characters minimum)" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,  :class => "label" %><br />
    <%= f.password_field :password_confirmation, :class => "texty", autocomplete: "off", :placeholder => "Confirm Password" %>
  </div>

  <div class="field">
    <%= f.label :avatar,  :class => "label" %><br>
    <%= f.file_field :avatar, :class => "texty", :placeholder => "Upload image" %>
  </div>


<div class="form_end">

  <div class="col-md-4">
    <p style="font-size: 8px;">By signing up, you agree to our terms of use, privacy policy</p>
  </div>

  <div class="col-md-7 actions">
    <%= f.submit "Sign up",:class => "right_button"%>
  </div>

  </div>
<% end %>
</div>
  <div class="shared_links">
  <%= render "devise/shared/links" %>
  </div>
</div>