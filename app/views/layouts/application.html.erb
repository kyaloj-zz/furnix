<!DOCTYPE html>
<html>
<head>
  <title>Furnix</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= javascript_include_tag '/bootstrap.min.js' %>
  <%= stylesheet_link_tag    '/snip.css' %>
  <%= stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Open+Sans', media: 'all' %>
  
</head>


<body>

<div class="container-fluid">
    <!-- Second navbar for search -->
    <nav class="navbar navbar-default">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-3">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <%= link_to 'Furnix', root_url, :class => 'navbar-brand' %>
        </div>
    
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-collapse-3">
          <ul class="nav navbar-nav navbar-right">
              <li>
                <%= link_to "Home", root_url, :class => 'navbar-link'  %>
              </li>
            <li><a href="#">About</a></li>
            
            <li><a href="#">Contact Us</a></li>

            

            <li class="dropdown">
              
               <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'My profile'%></li>
                <li><a href="#">Settings</a></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Logout" %>
                </li>
              </ul>
            </li>
           
             
           
            <li>
              <a class="btn btn-default btn-outline"  data-toggle="collapse" href="#nav-collapse3" aria-expanded="false" aria-controls="nav-collapse3">Search</a>
            </li>
          </ul>
          <div class="collapse nav navbar-nav nav-collapse" id="nav-collapse3">
            <form class="navbar-form navbar-right" role="search">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" />
              </div>
              <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
            </form>
          </div>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container -->
    </nav><!-- /.navbar -->

<%= yield %>


<div class="container" id="footers">
  <footer>
    <div class="row">

           <div class="col-md-12 socials"> 
               <a href="https://www.twitter.com/">
                    <img src="/twitter.png">
               </a>
              <a href="https://www.facebook.com/?_rdr">
                 <img src="/facebook.png">
              </a>
              <a href="https://plus.google.com/">
                 <img src="/g_plus.png">
              </a>
              <a href="http://www.skype.com/en/">
                 <img src="/skype.png">
              </a>
          </div>
         </div>
        <div class="row">
            <div class="col-md-12 copyright_part">    
              <p> 
                 &copy Cliff & Justus-2015
              </p>
            </div>  
         </div>
  </footer>
</div>

</body>
</html>
