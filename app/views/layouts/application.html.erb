<!DOCTYPE html>
<html>
<head>
  <title>Furnix</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= javascript_include_tag '/bootstrap.min.js' %>
  <%= stylesheet_link_tag    '/snip.css' %>
  <%= stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Open+Sans', media: 'all' %>
  
</head>


<body>

<div class="container">

      
       
  <div class="row">
          <div class="col-md-4">  
            <%= link_to 'Furnix', root_url, :class => 'navbar-brand' %>
          </div>
    
      
        <div class="col-md-8" id="navbar-collapse-3">

          <ul class="nav navbar-nav navbar-right">
              <li>
                <%= link_to "Home", root_url, :class => 'navbar-link'  %>
              </li>
            

            <% if user_signed_in? %>
                <li>
                 <%= current_user.name %>
                  
                  </li>
                <li>
                <%= link_to 'My profile', user_path(current_user.id) %>
                </li>

                
                
                <li>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete  %>
                </li>
              </ul>

            
            <% else %> 
             <ul>
              <li>
                <%= link_to "Login", new_user_session_path %>
              </li>
              <li>
                <%= link_to "Sign up", new_user_registration_path %> 
              </li>

              </ul>

            <% end %>
            
         </div> <!-- for col-md-8   --> 
      </div> <!-- for row -->
</div><!-- /.container-fluid -->

<%= yield %>


<div class="container" id="footers">
  <footer>
    <div class="row">

           <div class="col-md-12 socials"> 
               <a href="https://www.twitter.com/">
                    <img src="/twitter.png">
               </a>
              <a href="https://www.facebook.com/?_rdr">
                 <img src="/facebook.png">
              </a>
              <a href="https://plus.google.com/">
                 <img src="/g_plus.png">
              </a>
              <a href="http://www.skype.com/en/">
                 <img src="/skype.png">
              </a>
          </div>
         </div>
        <div class="row">
            <div class="col-md-12 copyright_part">    
              <p> 
                 &copy Justus-2015
              </p>
            </div>  
         </div>
  </footer>
</div>

</body>
</html>
