<div class="container">

<p id="notice"><%= notice %></p>
<header class="the_head" id="shops">
<h1>All Shops</h1>

</header>

      <div class="row">
        <% @shops.each do |shop| %>

          <div class="col-md-3 the_box">

          <p><%= image_tag shop.avatar.url, :class => "the_images" %></p>
            <p><%= shop.name %></p>
            <p><%= shop.location %></p>
            <p><%= shop.user_id %></p>
            <p><%= link_to 'Show', shop %></p>
            
            
         
          </div>
        <% end %>
     
    </div>

    <div class="row">

        <%= link_to 'Open a New Shop', new_shop_path %>
    </div> 
</div> <!-- the container -->