  <!-- a catchy background -->
	<div id="main_page">
      
         <%= render 'layouts/navbar' %>
    
		<h2>Get the best furniture from top class carpenters</h2>
	</div>


 <div class="container"> 

	<!-- how it works -->
<div class="row howitworks">
    <h2>How it works</h2>
</div>


  <%= render 'layouts/howitworks' %>

	
	   
   <!-- top 5 rated furniture -->

	<div class="row">
		<h2>Most popular design</h2>
	</div>

	<div class="row">
		
  
  
    <% @furnitures.each do |furniture| %>
      <div class="col-md-3 the box">
        <p><%= image_tag furniture.avatar.url, :class => "the_images" %></p>
        <p>Title: <%= furniture.title %></p>
        
        
        <p>Price:<%= furniture.price %></p>
       
        <p>Delivery?<%= furniture.delivery %></p>

       <!--  user cant see more details unless signed in  -->

        <% if user_signed_in? %>
             <p><%= link_to 'Show', furniture %></p>
      

       <% else %> 
             
                <p><%= link_to "More details", new_user_session_path %></p>
             
        <% end %>

     </div>
    <% end %>

    </div>

    <div class="row">
 
		<p><%= link_to 'More Furniture', furnitures_path %></p>
	</div>
  
	<div class="row">
		<h2>Top rated Furniture shops</h2>
	</div>

     <!--  top 5 rated carpenters -->

	<div class="row">
		<% @shops.each do |shop| %>
        <div class="col-md-3 the_box">
        <p><%= image_tag shop.avatar.url, :class => "the_images"%></p>
        <p>Name:<%= shop.name %></p>
        <p>Location:<%= shop.location %></p>

        <% if user_signed_in? %>
        <p><%= link_to 'more details', shop %></p>

        <% else %>
           <p><%= link_to "More details", new_user_session_path %></p>
           <% end %>
        </div>
        
         <% end %>
         </div>

   <div class="row">
		<p><%= link_to 'More Shops', shops_path %></p>
	</div>
</div>
