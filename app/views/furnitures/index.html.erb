<p id="notice"><%= notice %></p>

<h1>Listing Furnitures</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Category</th>
      <th>Delivery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @furnitures.each do |furniture| %>
      <tr>
        <td><%= furniture.shop_id %></td>
        <td><%= furniture.title %></td>
        <td><%= furniture.description %></td>
        <td><%= furniture.image %></td>
        <td><%= furniture.price %></td>
        <td><%= furniture.stock %></td>
        <td><%= furniture.category %></td>
        <td><%= furniture.delivery %></td>
        <td><%= link_to 'Show', furniture %></td>
        <td><%= link_to 'Edit', edit_furniture_path(furniture) %></td>
        <td><%= link_to 'Destroy', furniture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

